<Window x:Class="dikhazva.wndTanulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dikhazva"
        mc:Ignorable="d"
        Title="Diákszövetkezet" Background="CadetBlue" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu x:Name="MenuSor" Grid.Row="0">

            <MenuItem Header="Munkavállalás">
                <MenuItem Header="Keresés" Click="MenuItem_Click"/>
                <MenuItem x:Name="miMunkaido" Header="Munka idő" Click="MenuItem_Click"/>
            </MenuItem>

            <MenuItem x:Name="miAjanlatok" Header="Ajánlatok" Click="MenuItem_Click"/>
            <MenuItem x:Name="miNapló" Header="Napló">
                <MenuItem Header="Elfogadott munkák" Click="MenuItem_Click"/>
                <MenuItem Header="Nem elfogadott munkák" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label FontSize="30" FontWeight="Bold" Content="Diákszövetkezet" Width="250" Height="50" Margin="492,50,50,319"/>


    </Grid>
</Window>
