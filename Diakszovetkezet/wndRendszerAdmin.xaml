<Window x:Class="Diakszovetkezet.wndRendszerAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diakszovetkezet"
        mc:Ignorable="d"
        Title="Rendszer Adminisztrátor" Height="785" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="640"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="1">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Kilépés" Name="miKilepes" Click="miKilepes_Click"/>
            <MenuItem Header="Felhasználói adatok módosítása" Name="miFelhasznaloadatmod" Click="miFelhasznaloadatmod_Click"/>
            <MenuItem Header="Cég regisztráció" Name="miCegregisztracio" Click="miCegregisztracio_Click"/>
            <MenuItem Header="Felhasználó regisztráció" Name="miFelhasznaloregisztracio" Click="miFelhasznaloregisztracio_Click"/>
        </Menu>
        <TabControl Grid.Row="2">
            <TabItem Header="Munkák" Name="tiMunkak">
                <Grid Background="White">
                    <ListView Margin="0,0,0,30" HorizontalAlignment="Stretch" Name="lvMunkaLista" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Munka neve" Width="150" DisplayMemberBinding="{Binding Munka}"/>
                                <GridViewColumn Header="Cég Neve" Width="120" DisplayMemberBinding="{Binding Cégnév}"/>
                                <GridViewColumn Header="Helyszín" Width="250" DisplayMemberBinding="{Binding Helyszín}"/>
                                <GridViewColumn Header="Helyek száma" Width="100" DisplayMemberBinding="{Binding Helyekszáma}"/>
                                <GridViewColumn Header="Munka kezdete" Width="130" DisplayMemberBinding="{Binding Munkakezdet}"/>
                                <GridViewColumn Header="Munka vége" Width="130" DisplayMemberBinding="{Binding Munkavége}"/>
                                <GridViewColumn Header="Munkaköri Leírás" Width="380" DisplayMemberBinding="{Binding Munkakör}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Diákok" Name="tiDiakok">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="Munka Diák Egyeztető" Name="tiMunkaDiak">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <StatusBar Name="sbAdatSav"/>
        </StackPanel>
        <Rectangle Grid.Row="0" Fill="LightSkyBlue"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="27" Text="Adminisztrátori Felület" Foreground="RoyalBlue"/>

    </Grid>
</Window>
